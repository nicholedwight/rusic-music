<!--
  ideas/index.html.liquid

  This is the homepage of your space and where you list all your ideas. They
  can be accessed using `space.ideas`.

  The contents of this template are rendered where `content_for_layout` is
  called within layouts/subdomain.html.liquid. See http://developer.rusic.com/
  for more details.
-->
<div class="music-controls">
  <button type="button" name="play" id="muzak">MUZAK</button>
</div>
<div class="inner cover">
  <div class="list-group">

    <!-- Hint: loop over the ideas in the space using liquid's `for` tag -->
    {% for idea in space.ideas %}
    <div class="card">
      <div class="card-meta">
        <a href="{{ idea.permalink }}" class="list-group-item">
          <h4 class="list-group-item-heading">{{ idea.title }} - {{ idea.custom.user }}</h4>
        </a>
        <div class="list-group-item-text">{{ idea.content | markdown }}</div>

      </div>
    </div>
    {% endfor %}
  </div>
</div>
